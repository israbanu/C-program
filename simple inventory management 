#include <stdio.h>
#include <string.h>

#define MAX 100

struct Item {
    int id;
    char name[30];
    int quantity;
    float price;
};

struct Item inv[MAX];
int count = 0;

void addItem() {
    if (count >= MAX) {
        printf("Inventory full!\n");
        return;
    }

    printf("\nEnter Item ID: ");
    scanf("%d", &inv[count].id);

    printf("Enter Item Name: ");
    scanf("%s", inv[count].name);

    printf("Enter Quantity: ");
    scanf("%d", &inv[count].quantity);

    printf("Enter Price: ");
    scanf("%f", &inv[count].price);

    count++;
    printf("Item added successfully!\n");
}

void displayItems() {
    if (count == 0) {
        printf("\nNo items in inventory.\n");
        return;
    }

    printf("\nID\tName\tQuantity\tPrice\n");
    for (int i = 0; i < count; i++) {
        printf("%d\t%s\t%d\t\t%.2f\n",
               inv[i].id, inv[i].name,
               inv[i].quantity, inv[i].price);
    }
}

void searchItem() {
    int id, found = 0;
    printf("\nEnter Item ID to search: ");
    scanf("%d", &id);

    for (int i = 0; i < count; i++) {
        if (inv[i].id == id) {
            printf("\nItem Found!\n");
            printf("ID: %d\n", inv[i].id);
            printf("Name: %s\n", inv[i].name);
            printf("Quantity: %d\n", inv[i].quantity);
            printf("Price: %.2f\n", inv[i].price);
            found = 1;
            break;
        }
    }

    if (!found)
        printf("\nItem not found!\n");
}

void updateItem() {
    int id, found = 0;
    printf("\nEnter Item ID to update: ");
    scanf("%d", &id);

    for (int i = 0; i < count; i++) {
        if (inv[i].id == id) {
            printf("\nEnter New Name: ");
            scanf("%s", inv[i].name);

            printf("Enter New Quantity: ");
            scanf("%d", &inv[i].quantity);

            printf("Enter New Price: ");
            scanf("%f", &inv[i].price);

            printf("Item updated successfully!\n");
            found = 1;
            break;
        }
    }

    if (!found)
        printf("\nItem not found!\n");
}

int main() {
    int choice;

    do {
        printf("\n--- Inventory Management System ---\n");
        printf("1. Add Item\n");
        printf("2. Display Items\n");
        printf("3. Search Item\n");
        printf("4. Update Item\n");
        printf("5. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
        case 1:
            addItem();
            break;
        case 2:
            displayItems();
            break;
        case 3:
            searchItem();
            break;
        case 4:
            updateItem();
            break;
        case 5:
            printf("Exiting program...\n");
            break;
        default:
            printf("Invalid choice!\n");
        }
    } while (choice != 5);

    return 0;
}