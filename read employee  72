#include <stdio.h>

int main() {
    FILE *fp;
    int id;
    char name[50];
    float salary;

    fp = fopen("employee.txt", "r");

    if (fp == NULL) {
        printf("Error: Cannot open file.\n");
        return 1;
    }

    printf("Employee Details:\n");
    printf("------------------\n");

    while (fscanf(fp, "%d %s %f", &id, name, &salary) != EOF) {
        printf("ID: %d\n", id);
        printf("Name: %s\n", name);
        printf("Salary: %.2f\n\n", salary);
    }

    fclose(fp);

    return 0;
}