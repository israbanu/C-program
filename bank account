#include <stdio.h>

struct BankAccount {
    int accNo;
    char name[50];
    float balance;
};

void display(struct BankAccount acc) {
    printf("\n--- Account Details ---\n");
    printf("Account No: %d\n", acc.accNo);
    printf("Name: %s\n", acc.name);
    printf("Balance: %.2f\n", acc.balance);
}

float deposit(float bal, float amt) {
    return bal + amt;
}

float withdraw(float bal, float amt) {
    if (amt > bal) {
        printf("\nInsufficient Balance!\n");
        return bal;
    }
    return bal - amt;
}

