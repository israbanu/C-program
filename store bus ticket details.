#include <stdio.h>

struct BusTicket
{
    int ticketNo;
    char passengerName[50];
    char source[30];
    char destination[30];
    float fare;
};

int main()
{
    struct BusTicket t;

    // Input details
    printf("Enter Ticket Number: ");
    scanf("%d", &t.ticketNo);

    printf("Enter Passenger Name: ");
    scanf(" %[^\n]", t.passengerName);

    printf("Enter Source: ");
    scanf(" %[^\n]", t.source);

    printf("Enter Destination: ");
    scanf(" %[^\n]", t.destination);

    printf("Enter Fare: ");
    scanf("%f", &t.fare);

    // Display details
    printf("\n--- Bus Ticket Details ---\n");
    printf("Ticket No     : %d\n", t.ticket