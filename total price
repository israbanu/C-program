    float price, discount, finalPrice;

    printf("Enter total price: ");
    scanf("%f", &price);

    printf("Enter discount percentage: ");
    scanf("%f", &discount);

    finalPrice = price - (price * discount / 100);

    printf("\nTotal Price = %.2f", price);
    printf("\nDiscount = %.2f%%", discount