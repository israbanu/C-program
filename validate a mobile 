#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char mobile[20];
    int valid = 1;

    printf("Enter your mobile number: ");
    scanf("%s", mobile);

    // Check length
    if (strlen(mobile) != 10) {
        valid = 0;
    } 
    // Check if first digit is 7, 8, or 9
    else if (mobile[0] != '7' && mobile[0] != '8' && mobile[0] != '9') {
        valid = 0;
    } 
    // Check if all characters are digits
    else {
        for (int i = 0; i < 10; i++) {
            if (!isdigit(mobile[i])) {
                valid = 0;
                break;
            }
        }
    }

    if (valid) {
        printf("Mobile number is valid.\n");
    } else {
        printf("Mobile number is invalid.\n");
    }

    return 0;
}