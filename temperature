#include <stdio.h>

int main() {
    float temp[7];
    float highest, lowest;
    int i;

    // Input temperatures
    for(i = 0; i < 7; i++) {
        printf("Enter temperature for day %d: ", i + 1);
        scanf("%f", &temp[i]);
    }

    // Initialize
    highest = temp[0];
    lowest = temp[0];

    // Find highest and lowest
    for(i = 1; i < 7; i++) {
        if(temp[i] > highest)
            highest = temp[i];

        if(temp[i] < lowest)
            lowest = temp[i];
    }

    // Output results
    printf("\nHighest Temperature = %.2f", highest);
    printf("\nLowest Temperature = %.2f\n", lowest);

    return 0;
}