#include <stdio.h>

int main()
{
    int n, i;
    int marks[50];
    int max, topperIndex = 0;

    printf("Enter number of students: ");
    scanf("%d", &n);

    for(i = 0; i < n; i++)
    {
        printf("Enter marks of student %d: ", i + 1);
        scanf("%d", &marks[i]);
    }

    max = marks[0];

    for(i = 1; i < n; i++)
    {
        if(marks[i] > max)
        {
            max = marks[i];
            topperIndex = i;
        }
    }

    printf("\nTopper is Student %d", topperIndex