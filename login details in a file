#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *file;
    char username[50], password[50];

    // Open file in append mode (creates file if it doesn't exist)
    file = fopen("logins.txt", "a");
    if (file == NULL) {
        printf("Unable to open file.\n");
        return 1;
    }

    // Get login details from user
    printf("Enter username: ");
    scanf("%s", username);
    printf("Enter password: ");
    scanf("%s", password);

    // Write login details to file
    fprintf(file, "Username: %s, Password: %s\n", username, password);
    printf("Login details saved successfully.\n");

    // Close the file
    fclose(file);

    return 0;
}