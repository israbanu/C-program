#include <stdio.h>

int main() {
    int days, i, worked, count = 0;

    printf("Enter total number of days in month: ");
    scanf("%d", &days);

    for (i = 1; i <= days; i++) {
        printf("Did you work on day %d? (1 = Yes, 0 = No): ", i);
        scanf("%d", &worked);

        if (worked == 1) {
            count++;
        }
    }

    printf("\nTotal days worked = %d\n", count);

    return 0;
}